{
  "Black": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.(py|pyi)$",
    "check": "black --check --diff --",
    "fix": "black --"
  },
  "Git": {
    "is_only_active_if_command": "git rev-parse",
    "file_pattern": "",
    "check": "git diff --check HEAD^ --",
    "fix": null
  },
  "Gitlint": {
    "is_only_active_if_command": "git rev-parse",
    "file_pattern": null,
    "check": "gitlint --ignore body-is-missing",
    "fix": null
  },
  "Haskell Dockerfile Linter": {
    "is_only_active_if_command": null,
    "file_pattern": "(^|[./])Dockerfile$",
    "check": "hadolint --",
    "fix": null
  },
  "HTMLHint": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.(htm|html)$",
    "check": "htmlhint --",
    "fix": null
  },
  "Nu Html Checker (v.Nu)": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.(css|htm|html|svg|xht|xhtml)$",
    "check": "vnu --also-check-css --also-check-svg --Werror --",
    "fix": null
  },
  "Prettier": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.(css|htm|html|js|json|md|toml|ts|xht|xhtml|xml|yaml|yml)$",
    "check": "prettier --check --",
    "fix": "prettier --write --"
  },
  "Pylint": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.py$",
    "check": "pylint --",
    "fix": null
  },
  "ShellCheck": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.sh$",
    "check": "shellcheck --",
    "fix": null
  },
  "stylelint": {
    "is_only_active_if_command": null,
    "file_pattern": "\\.css$",
    "check": "stylelint --",
    "fix": null
  }
}
